    "    ax1.tick_params(axis='y', labelcolor='tab:blue')\n",
    "    ax2 = ax1.twinx()\n",
    "    ax2.set_ylabel('Food RPI (% change)', color='tab:red')\n",
    "    ax2.plot(m['Year'], m['Food_RPI'], marker='s', linestyle='--', color='tab:red', label='Food RPI')\n",
